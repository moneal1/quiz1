<!DOCTYPE html>
<html>
  <head>
    <title>Quiz1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <header class="row">
      <div class="col-3">
          <h1>click the button to see a picture</h1>
          <%= simple_form_for @quiz do |f| %>
          <%= f.input :picture %>
          <%= f.submit 'Create' %>
      <% end %>
      </div>
      <div class="col-4">
        
      </div>
    </header>
    <br class="clear" />
    <%= yield %>
  </body>
</html>

